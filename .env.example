# ===========================================
# Unum Environment Configuration
# ===========================================
#
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
#
# To generate these values:
#   Option 1: Run ./infrastructure/scripts/setup-aws.sh
#   Option 2: Run terraform in ./infrastructure/terraform
#   Option 3: Create manually in AWS Console
#

# ============ AWS Configuration ============

# AWS Region (e.g., us-east-1, us-west-2, eu-west-1)
AWS_REGION=us-east-1

# AWS Credentials
# Get these from IAM console or setup script
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============ Resource Names ============

# DynamoDB table name
DYNAMO_TABLE=unum-data-dev

# S3 bucket name (must be globally unique)
S3_BUCKET=unum-media-dev

# ============ Feature Flags ============

# Enable AWS backend (set to true to use S3/DynamoDB)
USE_AWS_BACKEND=false

# Enable offline sync queue
ENABLE_OFFLINE_SYNC=true

# Enable background sync when app reconnects
ENABLE_BACKGROUND_SYNC=false

# ============ Optional: API Gateway ============
# (For future standalone API deployment)

# API_BASE_URL=https://api.example.com
# API_KEY=

# ============ Optional: Analytics ============

# ANALYTICS_ENABLED=false
# ANALYTICS_KEY=

# ============ Development ============

# Use test data instead of real data
USE_TEST_DATA=false

# Enable debug logging
DEBUG=false
